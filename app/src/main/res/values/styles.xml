<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorDark</item>
    </style>

    <style name="roudperfil" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme.TextInputLayout.Hint" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextInputLayout.Counter" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorHumo</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextInputLayout.Error" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorHumo</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
